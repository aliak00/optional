{
	"name": "optional",
	"authors": [
		"Ali Akhtarzada"
	],
	"description": "An optional/maybe type with safe dispatchingrange semantics",
	"copyright": "Copyright Â© 2018, Ali Akhtarzada",
    "license": "MIT",
	"targetPath": "bin",
	"dependencies": {
        "bolts": "~>1.3.0"
    },
    "configurations": [
        {
            "name": "library",
            "targetType": "library"
        },
        {
            "name": "unittest",
            "importPaths": [
                "./tests"
            ],
            "sourcePaths": [
                "./tests"
            ]
        },
        {
            "name": "unittest-safe",
            "buildType": "unittest",
            "importPaths": [
                "./tests"
            ],
            "sourcePaths": [
                "./tests"
            ],
            "dflags": ["-dip1000", "-dip25"]
        },
        {
            "name": "unittest-safe-asan",
            "buildType": "unittest",
            "importPaths": [
                "./tests"
            ],
            "sourcePaths": [
                "./tests"
            ],
            "dflags": ["-dip1000", "-dip25"],
            "dflags-ldc": [
                "-fsanitize=address",
                "-frame-pointer=all"
            ]
        },
        {
            "name": "unittest-compat",
            "buildType": "unittest",
            "importPaths": [
                "./compattests"
            ],
            "sourcePaths": [
                "./compattests"
            ],
            "dependencies": {
                "vibe-d:data": "*"
            }
        }
    ],
    "buildTypes": {
        "unittest-release": {
            "buildOptions": ["releaseMode", "optimize", "inline", "unittests"]
        }
    }
}
